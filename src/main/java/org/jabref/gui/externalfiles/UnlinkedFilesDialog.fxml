<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.jabref.gui.icon.JabRefIconView?>
<?import org.controlsfx.control.CheckTreeView?>
<DialogPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jabref.gui.externalfiles.UnlinkedFilesDialogView">
    <content>
        <VBox prefWidth="600.0" spacing="5.0">
            <Label text="%Select a directory where the search shall start."/>
            <HBox alignment="BASELINE_CENTER" spacing="10.0">
                <TextField fx:id="directoryPathField" HBox.hgrow="ALWAYS"/>
                <Button onAction="#browseFileDirectory" styleClass="icon-button,narrow"
                        prefHeight="20.0" prefWidth="20.0">
                    <graphic>
                        <JabRefIconView glyph="OPEN"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%Browse"/>
                    </tooltip>
                </Button>
            </HBox>
            <HBox alignment="BASELINE_LEFT" prefHeight="47.0" prefWidth="600.0" spacing="15.0">
                <Label alignment="BASELINE_LEFT" prefHeight="17.0" prefWidth="105.0"
                       text="%Select file type:"/>
                <ComboBox fx:id="fileTypeSelection" prefHeight="27.0" prefWidth="144.0"/>
                <Button fx:id="buttonScan" defaultButton="true" disable="true" mnemonicParsing="false"
                        onAction="#scanFiles" text="%Scan directory">
                    <tooltip>
                        <Tooltip text="%Searches the selected directory for unlinked files."/>
                    </tooltip>
                </Button>
            </HBox>
            <StackPane VBox.vgrow="ALWAYS">
                <Accordion fx:id="accordion" minHeight="300.0" prefHeight="300.0" maxHeight="300.0">
                    <panes>
                        <TitledPane fx:id="filePane" text="%Currently unlinked files">
                            <ScrollPane fitToWidth="true">
                                <CheckTreeView fx:id="tree"/>
                            </ScrollPane>
                        </TitledPane>
                        <TitledPane fx:id="resultPane" text="%Import result" visible="false">
                            <TableView fx:id="tvResult" editable="true" visible="false">
                                <columns>
                                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="%Status"/>
                                    <TableColumn fx:id="colMessage" prefWidth="300.0" text="%Message"/>
                                    <TableColumn fx:id="colFile" prefWidth="500.0" text="%File"/>
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </TitledPane>
                    </panes>
                </Accordion>
                <VBox fx:id="progressPane" alignment="CENTER" StackPane.alignment="CENTER">
                    <ProgressIndicator fx:id="progressDisplay" maxHeight="50.0" maxWidth="50.0"
                                       prefHeight="50.0" prefWidth="50.0" progress="0.0"/>
                    <Label fx:id="progressText" text="%Searching file system..."/>
                </VBox>
            </StackPane>
            <ButtonBar buttonMinWidth="80.0" prefHeight="0.0" prefWidth="579.0" BorderPane.alignment="CENTER">
                <buttons>
                    <Button mnemonicParsing="false" onAction="#selectAll" text="%Select all"/>
                    <Button mnemonicParsing="false" onAction="#unselectAll" text="%Unselect all"/>
                    <Button mnemonicParsing="false" onAction="#collapseAll" text="%Collapse all"/>
                    <Button mnemonicParsing="false" onAction="#expandAll" text="%Expand all"/>
                    <Button fx:id="buttonExport" mnemonicParsing="false" onAction="#exportSelected"
                            text="%Export selected">
                        <tooltip>
                            <Tooltip text="%Export to text file."/>
                        </tooltip>
                    </Button>
                </buttons>
            </ButtonBar>
        </VBox>
    </content>
    <ButtonType fx:constant="CANCEL"/>
    <ButtonType fx:id="importButton" buttonData="OK_DONE" text="%Import"/>
</DialogPane>
