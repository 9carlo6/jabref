<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<DialogPane minHeight="300.0" prefHeight="601.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jabref.gui.externalfiles.ExternalFilesDialogView">
   <content>
      <BorderPane prefHeight="600.0" prefWidth="600.0">
         <top>
            <VBox prefHeight="100.0" prefWidth="579.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="%Select a directory where the search shall start" />
                  <HBox prefHeight="35.0" prefWidth="600.0" spacing="10.0">
                     <children>
                        <TextField fx:id="directoryPathField" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#browseFileDirectory" text="%Browse">
                           <tooltip>
                              <Tooltip text="%Opens the file browser." />
                           </tooltip>
                        </Button>
                     </children>
                  </HBox>
                  <HBox prefHeight="47.0" prefWidth="600.0" spacing="15.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="105.0" text="%Select file type:" />
                        <ComboBox fx:id="fileTypeSelection" prefHeight="27.0" prefWidth="144.0" />
                     </children>
                  </HBox>
                  <Button fx:id="buttonScan" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#scanFiles" text="%Scan files">
                     <tooltip>
                        <Tooltip text="%Searches the selected directory for unlinked files" />
                     </tooltip>
                  </Button>
               </children>
            </VBox>
         </top>
         <center>
            <BorderPane BorderPane.alignment="CENTER">
               <center>
                  <StackPane prefHeight="500.0" prefWidth="250.0">
                     <children>
                        <ScrollPane fitToWidth="true" minHeight="300.0" prefHeight="351.0" prefWidth="579.0">
                           <content>
                              <TreeView fx:id="tree" minHeight="305.0" prefHeight="305.0" prefWidth="561.0" />
                           </content>
                        </ScrollPane>
                        <VBox fx:id="panelSearchProgress" prefHeight="200.0" prefWidth="100.0" spacing="5.0" visible="false" StackPane.alignment="CENTER">
                           <children>
                              <Label fx:id="progressText" text="%Searching the file system...." />
                              <ProgressIndicator fx:id="progressDisplay" maxHeight="50.0" maxWidth="50.0" progress="0.0" />
                           </children>
                           </VBox>
                     </children>
                  </StackPane>
               </center>
               <top>
                  <Label text="%These files are not linked in the active library." BorderPane.alignment="TOP_LEFT" />
               </top>
               <bottom>
                  <ButtonBar prefHeight="108.0" prefWidth="579.0" BorderPane.alignment="CENTER">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#selectAll" text="%Select all" />
                        <Button mnemonicParsing="false" onAction="#unselectAll" text="%Unselect all" />
                        <Button mnemonicParsing="false" onAction="#collapseAll" text="%Collapse all" />
                      <Button mnemonicParsing="false" onAction="#expandAll" text="%Expand all" />
                      <Button fx:id="buttonExport" mnemonicParsing="false" onAction="#exportSelected" text="%Export selected entries" />
                    </buttons>
                  </ButtonBar>
               </bottom>
            </BorderPane>
         </center>
      </BorderPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="CANCEL" />
      <ButtonType fx:id="importButton" buttonData="OK_DONE" text="%Import" />
   </buttonTypes>
</DialogPane>
